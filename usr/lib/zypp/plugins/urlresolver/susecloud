"""URL Resolver zypper plugin. This plugin resolves the url to the proper
   update server and sends along the necessary instance data."""


import base64

import cloudregister.registerutils as utils

from zypp_plugin import Plugin

class SUSECloudPlugin(Plugin):
    def RESOLVEURL(self, headers, body):
        """Convert the URL for the repo"""
        update_server = utils.get_smt()
        update_server_ip = update_server.get_ipv4()
        if utils.has_ipv6_access(update_server):
            update_server_ip = update_server.get_ipv6()
        srv_url = 'http://%s/' % update_server_ip
        repo_url = srv_url + 'repo/' + headers.get('repo')
        instance_data = bytes(
            utils.get_instance_data(utils.get_config()),
            'utf-8'
        )
        self.answer(
            'RESOLVEDURL',
            { 'X-Instance-Data': base64.b64encode(instance_data) },
            repo_url
        )

plugin = SUSECloudPlugin()
plugin.main()
